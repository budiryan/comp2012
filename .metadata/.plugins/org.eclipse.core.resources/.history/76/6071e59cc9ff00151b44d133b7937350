WeaponFist::WeaponFist(int p) {
	weapon_name = "Fist";
	min_range = 1;
	max_range = 1;
	power = p;
}

WeaponFist::~WeaponFist() {
}

int WeaponFist::attack() {
	return power;
}

/*
 *
 *
 * IMPLEMENTATION OF ROBOTHEALER
 *
 *
 */

RobotHealer::RobotHealer(string s, int n, int health, int speeds, int attk,
		int deff) {
	name = s;
	max_hp = health;
	speed = speeds;
	x = 0;
	y = 0;
	endTurn = false;
	my_ally = ALL_ROBOTS;
	att = attk;
	def = deff;
	num_of_weapons = 0;
	for (int i = 0; i < MAX_WEAPON; i++)
		weapons[i] = nullptr;
}

RobotHealer::~RobotHealer() {

}

int RobotHealer::attack(RobotHealer* robot, Weapon * weapon) {
	if ((robot->my_ally == this->my_ally)
			&& (abs(robot->x - x) + abs(robot->y - y) == 1)) {
		//heal the shit, extra conditioning first
		if ((robot->hp + 100) >= robot->max_hp)
			return -100;
	}
	if (robot->my_ally == this->my_ally
			|| !(weapon->isInRange(x, y, robot->x, robot->y)))
		return 0;

	int damage;

	//Make a case for special weapons
	//Case for Weapon Fist
	if(weapon->getName() == "Fist" && this->getAlly() != robot->getAlly()){
		if(robot->att >= this->att){
			damage = max((robot->getAtt() * weapon->getPower() - this->getDef()),1);
			this->setHP(this->hp - damage);
			return -1 * damage;
		}
		else{
			damage = max((this->getAtt() * weapon->attack() - robot->getDef()),1);
			robot->setHP(robot->hp - damage);
			return damage;
		}
	}

	damage = max(this->att * weapon->attack() - robot->def, 1);
	robot->setHP(robot->hp - damage);
	return damage;

}

